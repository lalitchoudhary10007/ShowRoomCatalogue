<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nubella.purplecommerce.com.showroomcatalogue.Fragments.CollectionProducts">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/collection_products_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"/>




    <LinearLayout
        android:id="@+id/collection_products_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_height="wrap_content"
            android:text="Download"
            android:elevation="3dp"
            android:textSize="@dimen/medium_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/grid_two_count"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_widgets_black_24dp"
                android:tint="@color/red"
                android:layout_gravity="center"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/grid_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_apps_black"
                android:tint="@color/red"
                android:padding="5dp"/>


        </LinearLayout>


        <TextView
            android:id="@+id/txt_del_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text"
            android:textColor="@color/red"
            android:text="DELETE"
            android:padding="10dp"/>




    </LinearLayout>



</FrameLayout>
